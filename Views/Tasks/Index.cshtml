@model IEnumerable<HospitalManagementSystem.Models.Task>
@{
    ViewData["Title"] = "Tasks";
    var users = ViewBag.Users as Dictionary<int, string>;
    if (users == null)
    {
        users = new Dictionary<int, string>();
    }
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Tasks</h3>
    <a class="btn btn-primary" asp-action="Create">Create Task</a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Assigned To</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Title</td>
                        <td>@(users.ContainsKey(t.AssignedToUserId) ? users[t.AssignedToUserId] : "Unknown")</td>
                        <td>
                            @{
                                var priorityClass = t.Priority switch
                                {
                                    TaskPriority.Urgent => "bg-danger",
                                    TaskPriority.High => "bg-warning",
                                    TaskPriority.Medium => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @priorityClass">@t.Priority</span>
                        </td>
                        <td>
                            @{
                                var statusClass = t.Status switch
                                {
                                    HospitalManagementSystem.Models.TaskStatus.Completed => "bg-success",
                                    HospitalManagementSystem.Models.TaskStatus.InProgress => "bg-primary",
                                    HospitalManagementSystem.Models.TaskStatus.Cancelled => "bg-secondary",
                                    _ => "bg-warning"
                                };
                            }
                            <span class="badge @statusClass">@t.Status</span>
                        </td>
                        <td>@(t.DueDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                            {
                                <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

