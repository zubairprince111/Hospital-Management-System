@model ReportViewModel
@{
    ViewData["Title"] = "Report: " + Model.ReportType;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">@Model.ReportType Report</h3>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Reports</a>
</div>

<div class="row mb-3">
    @foreach (var item in Model.Summary)
    {
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-1">@item.Key</h6>
                    <h4 class="mb-0">@item.Value</h4>
                </div>
            </div>
        </div>
    }
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h5 class="mb-0">Details</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        @if (Model.Details.Any())
                        {
                            @foreach (var key in Model.Details.First().Keys)
                            {
                                <th>@key</th>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Details)
                    {
                        <tr>
                            @foreach (var cell in row)
                            {
                                <td>@cell.Value</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

