@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Doctors";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Doctors</h3>
    <a class="btn btn-primary" asp-action="Create">Add doctor</a>
</div>

<div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-10">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by name, specialty, or phone..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Specialty</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.FullName</td>
                        <td>@d.Specialty</td>
                        <td>@d.Phone</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                            {
                                <form asp-action="Delete" asp-route-id="@d.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>





